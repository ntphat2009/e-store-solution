        vertical-align: middle;
        background-size: 200px 150px;
    }

    .wrap_cmt ul li, .wrap_rating ul li {
        list-style: none;
    }

    .rating-topzonecr-star {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }
    .rating-topzonecr-star li {
        cursor: pointer;
