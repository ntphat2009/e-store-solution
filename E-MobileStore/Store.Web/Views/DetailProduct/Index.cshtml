        line-height: 32px;
        text-align: center;
    }

    .wrap_rating *, .wrap_cmt * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    .iconcmt-unstarlist {
        background-position: -80px -75px;
        height: 38px;
        width: 40px;
    }

    [class^="iconcmt-"], [class*="iconcmt-"] {
